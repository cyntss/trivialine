#chat.hidden.chatzone
  #userwrap
    %i.fa.fa-user
    .username 
      Username
    .close-btn#closechat
      %i.fa.fa-bars
  #usersListWrap
    %h3
      Online Users
    %ul.players-list
      - @players.each do |player|
        %li= player['name']
